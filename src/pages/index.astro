---
export const prerender = true;

import BaseLayout from '~/layouts/BaseLayout.astro';
import Button from '~/components/Button.astro';
---

<BaseLayout title="Hammad Majid" description="Front-end developer">
  <main class="h-full grid items-center">
    <div class="px-12 md:px-24 py-5">
      <header class="space-y-1">
        <h1 class="text-4xl font-semibold">Hammad Majid</h1>
        <p>Front-end developer</p>
      </header>
      <div
        class="flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2 items-start mt-6"
      >
        <Button
          icon="arrow-right"
          order="text-icon"
          style="filled"
          text="Get in touch"
          href="/contact"
        />
        <Button
          icon="github"
          order="icon-text"
          style="ghost-outlined"
          text="github"
          href="https://github.com/hammadmajid"
        />
      </div>
    </div>
  </main>
</BaseLayout>
